<AppManifest version="1">
    <!-- Defines the app's identity (name, displayname, etc) -->
    <Identity>
        <Name>snakeware.homeapp</Name>
        <DisplayName>Snakeware Home</DisplayName>
        <Desc>Snakeware's main homepage.</Desc>
        <Version>1.0.0</Version>
    </Identity>

    <Modules>
        <Module path="__init__.py"/>
    </Modules>

    <Permissions>
        <Install permission="fs.storage.app"/>
    </Permissions>

    <Entrypoints>
        <ClassEntry id="launcher" class="snakeware.homeapp.HomeApp"/>
    </Entrypoints>
</AppManifest>